<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>CampSpace</h1>
            <h3>Landing Sites</h3>
            <p>
                <a class="btn btn-primary btn-large" href="/landingSites/new">New Site</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            Our recommended sites
        </div>
    </div>
    <div class="row" style="display: flex; flex-wrap: wrap;">
    
        <% sites.forEach(function(element) { %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img class="img-responsive" style="max-height:200px;" src="<%= element.img %>">
                    <div class="caption">
                        <h4><%= element.name %></h4>
                        <p><%= element.location %></p>
                        <p><a class="btn btn-primary" href="/landingSites/<%= element._id %>">Details</a></p>
                    </div>
                </div>
            </div>
        <% }) %>
    
    </div>
</div>
<% include partials/footer %>