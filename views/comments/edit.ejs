<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>CampSpace</h1>
            <h3>Editing comment</h3>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            
            <form action="/landingSites/<%= siteID %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="loc">Editing post by <%= currentUser.username %></label>
                    <input class="form-control" type="text" name="editComment[text]" id="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4"></div>
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 form-group">
            <a href="/landingSites/<%= siteID %>">Cancel</a>
        </div>
        <div class="col-lg-4"></div>
    </div>
<% include ../partials/footer %>