<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>CampSpace</h1>
            <h3>Add new comment to <%= site.name %></h3>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <form action="/landingSites/<%= site._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="name">Author</label>
                    <input class="form-control" type="text" name="comment[author]" id="author" placeholder="ex: Chris Hadfield">
                </div>
                <div class="form-group">
                    <label for="loc">Comment</label>
                    <input class="form-control" type="text" name="comment[text]" id="text" placeholder="ex: Five stars!">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4"></div>
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 form-group">
            <a href="/landingSites">Cancel</a>
        </div>
        <div class="col-lg-4"></div>
    </div>
<% include ../partials/footer %>