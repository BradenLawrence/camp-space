<% include ../partials/header %>
<h1><%= site.name %></h1>
<p><%= site.location %></p>
<p><img src="<%= site.img %>"></p>
<p><%= site.description %></p>
<div class="comments">
    <% site.comments.forEach(function(element) { %>
        <p><strong><%= element.author %></strong></p>
        <p><%= element.text %></p>
    <% }) %>
    <p>
        <a class="btn btn-primary" href="/landingsites/<%= site._id %>/comments/new">Add comment</a>
    </p>
</div>

<% include ../partials/footer %>