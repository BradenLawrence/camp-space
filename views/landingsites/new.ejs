<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>CampSpace</h1>
            <h3>Add new Landing Site</h3>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <form action="/landingSites" method="POST">
                <div class="form-group">
                    <label>Posting as <%= currentUser.username %></label>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="site[name]" id="name" placeholder="ex: Olympus Mons">
                </div>
                <div class="form-group">
                    <label for="loc">Location</label>
                    <input class="form-control" type="text" name="site[location]" id="location" placeholder="ex: Mars">
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input class="form-control" type="text" name="site[description]" id="description" placeholder="Describe why this place is special...">
                </div>
                <div class="form-group">
                    <label for="img">Image URL</label>
                    <input class="form-control" type="text" name="site[img]" id="img" placeholder="ex: http://www.example.com/example.jpg">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4"></div>
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 form-group">
            <a href="/landingSites">Cancel</a>
        </div>
        <div class="col-lg-4"></div>
    </div>
<% include ../partials/footer %>