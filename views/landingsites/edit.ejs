<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"><h1>Editing <%= site.name %></h1></div>
        <div class="col-md-4"></div>
        </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/landingSites/<%= site._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Posting as <%= currentUser.username %></label>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="editSite[name]" id="name" value="<%= site.name %>">
                </div>
                <div class="form-group">
                    <label for="loc">Location</label>
                    <input class="form-control" type="text" name="editSite[location]" id="location" value="<%= site.location %>">
                </div>
                <div class="form-group">
                    <label for="distance">Distance from Earth (km)</label>
                    <input class="form-control" type="number" name="editSite[distance]" id="distance" value="<%= site.distance %>" min="0" step="1">
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input class="form-control" type="text" name="editSite[description]" id="description" value="<%= site.description %>">
                </div>
                <div class="form-group">
                    <label for="img">Image URL</label>
                    <input class="form-control" type="text" name="editSite[img]" id="img" value="<%= site.img %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 form-group">
            <a href="/landingSites">Cancel</a>
        </div>
        <div class="col-md-4"></div>
    </div>
<% include ../partials/footer %>